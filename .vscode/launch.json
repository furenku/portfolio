    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Debug Next.js (Server)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "args": ["node_modules/next/dist/bin/next", "dev"],
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
  }